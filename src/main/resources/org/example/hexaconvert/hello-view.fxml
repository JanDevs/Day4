<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.hexaconvert.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <ComboBox fx:id="opCombo" layoutX="15.0" layoutY="33.0" prefWidth="200.0" promptText="Escoge una opcion"></ComboBox>
  <TextField fx:id="iniValue" layoutX="15.0" layoutY="33.0" prefWidth="100.0"/>
  <Label fx:id="res"/>

  <Button text="Convertir" onAction="#onButtonClick"/>
</VBox>
